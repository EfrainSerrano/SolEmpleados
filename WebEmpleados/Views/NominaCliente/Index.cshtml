@model IEnumerable<Data.Model.Nomina>

@{
    ViewBag.Title = "Index";
    Data.Model.ProyectoFinalTI us = (Data.Model.ProyectoFinalTI)Session["usuario"];
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaPago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Conceptos.Concepto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleados.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td>
            @us.Nombre
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaPago)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Conceptos.Concepto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleados.Nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDNomina }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDNomina }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDNomina })
        </td>
    </tr>
}

</table>
